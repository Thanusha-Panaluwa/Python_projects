while True:
    mass = int(input("Enter your mass in kg:"))
    height = int(input("Enter your height in m:"))

    bmi = mass/height**2

    if bmi <=18.5:
        print("underweight")
        print(f"Please! be aware of your health. Your BMI is {bmi}.")
    elif bmi <=24.9:
        print("Normal weight")
        print(bmi, "Perfect!.")
    elif bmi <= 29.9:
        print("overweight")
        print("Please! be aware of your health. your BMI is {}.".format(bmi))
